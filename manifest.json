{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "D&D Beyond Backdrop and Colors Replacer",
  "version": "2.0.1.1",
  "description": "Replaces character backdrop images and colors.",
  "permissions": ["storage", "unlimitedStorage"],
  "host_permissions": ["https://www.dndbeyond.com/characters/*"],
  "action": {
      "default_icon": {
          "16": "icon.png",
          "48": "icon.png",
          "128": "icon.png"
      }
  },
  "content_scripts": [
      {
          "matches": ["https://www.dndbeyond.com/characters/*"],
          "exclude_matches": [
            "https://www.dndbeyond.com/characters/*/builder",
            "https://www.dndbeyond.com/characters/*/builder/*"
          ],
          "run_at": "document_idle",
          "js": ["content.js","sidebar.js"],
          "css": ["styles.css"]
      }
  ],
  "web_accessible_resources": [
    {
      "resources": ["button.html","button.css", "sidebar.html", "styles.css", "leaf.png", "parchment.jpg", "stone.png"],
      "matches": ["https://www.dndbeyond.com/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "backdrop-replacer@yourdomain.com",
      "strict_min_version": "109.0"
    }
  }
}
